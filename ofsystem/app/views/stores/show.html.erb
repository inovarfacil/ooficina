<%- model_class = Store -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fancy_name) %>:</strong></dt>
  <dd><%= @store.fancy_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:corporate_name) %>:</strong></dt>
  <dd><%= @store.corporate_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cnpj) %>:</strong></dt>
  <dd><%= @store.cnpj %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state_registration) %>:</strong></dt>
  <dd><%= @store.state_registration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @store.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site) %>:</strong></dt>
  <dd><%= @store.site %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stores_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_store_path(@store), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              store_path(@store),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
